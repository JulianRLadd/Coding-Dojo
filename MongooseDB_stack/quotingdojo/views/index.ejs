<html>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <body class="text-center">
        <div class="border border-primary d-inline-block p-5 rounded-lg">
            <h2>Welcome to Quoting Dojo</h2>
            
            <% if(messages.registration) { %>
                <!-- <%- JSON.stringify(messages) %>  -->
                    <% for (var x of messages.registration) { %>
                        <script>alert('<%= x %>')</script>
                    <% } %>
            <% } %>
            <form action="/quotes" method="post">
                <p>Your Name: <input type="text" name="name"></p>
                <p>Your Quote:<textarea name="quote" cols="30" rows="10"></textarea></p>
                <button>Add my quote!</button> 
            </form>
            <button><a href="./quotes">Skip to quotes!</a></button>
        </div>
    </body>
</html>