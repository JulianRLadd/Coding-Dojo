<h1>Listing <%=@dojos.length%> Dojos</h1>

<% if flash[:success]%>
<p class ="bg-success"><%= flash[:success] %></p>
<% end %>

<table class= "border border-dark">
  <thead>
    <tr class="border border-dark">
      <td>Coding Dojo Branch</td>
      <td class = "border border-dark">Street</td>
      <td>City</td>
      <td class = "border border-dark">State</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
  <% @dojos.each do |dojo| %>
    <tr>
      <td><%= dojo.branch %></td>
      <td><%= dojo.street %></td>
      <td><%= dojo.city %></td>
      <td><%= dojo.state %></td>
      <td><a href="/dojos/<%= dojo.id %>">Show</a>  |  <a href="/dojos/<%= dojo.id %>/edit">Edit</a>  |   <a href="/dojos/<%= dojo.id %>/destroy">Destroy</a></td>
    </tr>
  <% end %>  
  </tbody>
</table>
<a href="./dojos/new">New Dojo</a>
